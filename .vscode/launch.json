{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Debug sigma.build",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/test/bin/sbuild",
         "args": [
            // "--about",
            // "-v"
            "--build",
            "build.json:build_sb",
            "--log=2"
         ],
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}",
         "environment": [],
         "externalConsole": false,
         "MIMode": "gdb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
         // "preLaunchTask": "link",
         "miDebuggerPath": "/usr/bin/gdb"
      },
